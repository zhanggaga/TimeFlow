#more{
    width: 800px;
    margin:0 auto;
    margin-top:1250px;
    background-color:rgb(237,237,239);
    border:none;
}
#more_logo {
    width: 122px;
    height: 116px;
    border: none;
    background-image: url(../img/more.png);
    background-color:rgb(237,237,239);
    margin-left:42%;
}