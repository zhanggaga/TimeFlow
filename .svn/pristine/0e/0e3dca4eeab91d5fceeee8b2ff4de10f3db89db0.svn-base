body {
	background-image: url(../img/index_bg.png);
	background-repeat: no-repeat;
	background-size: cover;
	margin: 0;
	padding: 0;
	border: 0;
}
#container {
	width: 582px;
	/*background-color: white;*/
	margin-left: auto;
	margin-right: auto;
	position: relative;
	top: 294px;
}

#container button {
	font-family: "微软雅黑";
	font-size: 18px;
	color: #444444;
	background-color: white;
	width: 194px;
	padding: 0;
	margin: 0;
	padding-bottom: 14px;
	padding-top: 14px;
	border: 0;
}
#container button.display {
	background-color: white;
	color: #444444;
}
#container button.no-display {
	background-color: rgba(0, 0, 0, 0.5);
	color: white;
}
#container button:hover {
	color: #8db800;
}
#register {
	
}
#container #formContainer {
	background-color: white;
	/*padding: 10px;*/
	padding-top: 30px;
	padding-left: 25px;
	/*width: 310px;*/
}
#container #formContainer img {
	float: right;
}
#container #formContainer #other {
	float: right;
	margin-right: 30px;
	margin-left: 25px;
	width: 161px;
}
#container #formContainer #other img {
	margin-bottom: 10px;
}
#container #putinArea input {
	height: 35px;
	width: 300px;
	/*margin-bottom: 20px;*/
	border: solid #d7d7d7 1px;
}
#container #formContainer #submit {
	background-color: #8db800;
	color: white;
	width: 300px;
	height: 35px;
	font-size: 16px;
	font-family: "微软雅黑";
	letter-spacing: 10px;
	margin-top: 20px;
	border: 0;
	margin-bottom: 40px;
}
